<% layout('/layouts/boilerplate')%>
<div class="container mt-5">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
      <div class="card shadow">
        <!-- <img
          src="https://images.unsplash.com/photo-1511993807578-701168605ad3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2067&q=80"
          alt=""
          class="card-img-top"
        /> -->
        <div class="card-body">
          <h5 class="card-title">Register</h5>

          <form
            action="/register"
            method="Post"
            class="validated-form"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                id="username"
                type="text"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Done!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input
                class="form-control"
                id="email"
                type="email"
                name="email"
                required
              />
              <div class="valid-feedback">Done!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                id="password"
                type="password"
                name="password"
                required
              />
              <div class="valid-feedback">Done!</div>
            </div>

            <div class="d-grid gap-2">
              <button class="btn btn-info">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
