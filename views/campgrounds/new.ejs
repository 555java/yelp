<% layout('/layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New campground</h1>
  <div class="col-md-6 offset-md-3 col-xs-12">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          id="title"
          type="text"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Done!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          id="location"
          type="text"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Done!</div>
      </div>
      <div class="mb-3">
        <div class="custom-file">
          <label class="form-label custom-file-label" for="image"
            >Upload images</label
          >
          <input
            class="form-control custom-file-input"
            type="file"
            name="image"
            id="image"
            multiple
          />
        </div>
      </div>
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image Urls</label>
        <input
          class="form-control"
          id="image"
          type="text"
          name="campground[image]"
          required
        />
        <div class="valid-feedback">Done!</div>
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="25"
            aria-label="Amount (to the nearest dollar)"
            name="campground[price]"
            required
          />
          <span class="input-group-text">.00</span>
          <div class="valid-feedback">Done!</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          id="description"
          type="text"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Done!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add campground</button>
      </div>
    </form>
  </div>
</div>
